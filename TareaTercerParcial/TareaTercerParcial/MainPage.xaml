<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaTercerParcial.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#0A9B7F" Padding="24" CornerRadius="0">
            <Label Text="Programacion Movil 2" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Margin="-20,10,0,0" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button x:Name="btnEmpleados" Text="Registrar un Empleado" Clicked="btnEmpleados_Clicked"  HeightRequest="50" CornerRadius="30" FontAttributes="Bold" TextColor="White" BackgroundColor="#0A9B7F"  />
        </StackLayout>
        <StackLayout Margin="-20,10,0,0" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button x:Name="btnListaEmpleados" Text="Ver lista de Empleados" Clicked="btnListaEmpleados_Clicked" WidthRequest="180" HeightRequest="60" CornerRadius="30" FontAttributes="Bold" TextColor="White" BackgroundColor="#0A9B7F"/>
        </StackLayout>
    </StackLayout>


</ContentPage>
